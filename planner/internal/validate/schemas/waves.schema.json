{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "waves.json",
  "type": "object",
  "required": ["meta", "waves"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "planId", "artifact_hash"],
      "additionalProperties": false,
      "properties": {
        "version": {"type": "string", "minLength": 1},
        "planId": {"type": "string", "minLength": 1},
        "artifact_hash": {
          "type": "string",
          "minLength": 64,
          "maxLength": 64,
          "pattern": "^[A-Fa-f0-9]{64}$"
        }
      }
    },
    "waves": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  },
  "additionalProperties": true
}
