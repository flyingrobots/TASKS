{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tasks.json",
  "type": "object",
  "required": ["meta", "tasks", "dependencies"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "min_confidence", "artifact_hash"],
      "properties": {
        "version": {"type": "string"},
        "min_confidence": {"type": "number"},
        "artifact_hash": {"type": "string"},
        "validator_reports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "status", "input_hash"],
            "properties": {
              "name": {"type": "string"},
              "status": {
                "type": "string",
                "enum": ["pass", "fail", "error", "skip", "ok"]
              },
              "command": {"type": "string"},
              "input_hash": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
              },
              "cached": {
                "type": "boolean",
                "default": false
              },
              "detail": {"type": "string"},
              "raw_output": {
                "type": ["object", "string", "null"]
              }
            },
            "additionalProperties": false
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "feature_id", "title", "duration", "durationUnits", "acceptance_checks"],
        "properties": {
          "id": {"type": "string"},
          "feature_id": {"type": "string"},
          "title": {"type": "string"},
          "duration": {
            "type": "object",
            "required": ["optimistic", "mostLikely", "pessimistic"],
            "properties": {
              "optimistic": {"type": "number"},
              "mostLikely": {"type": "number"},
              "pessimistic": {"type": "number"}
            }
          },
          "durationUnits": {"type": "string"},
          "acceptance_checks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {"type": "string"}
              }
            }
          }
        },
        "additionalProperties": true
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "type", "isHard", "confidence"],
        "properties": {
          "from": {"type": "string"},
          "to": {"type": "string"},
          "type": {"type": "string"},
          "isHard": {"type": "boolean"},
          "confidence": {"type": "number"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
