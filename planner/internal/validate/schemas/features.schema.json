{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "features.json",
  "type": "object",
  "required": ["meta", "features"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "artifact_hash"],
      "properties": {
        "version": {"type": "string"},
        "artifact_hash": {"type": "string"}
      }
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"}
        }
      }
    }
  },
  "additionalProperties": true
}
